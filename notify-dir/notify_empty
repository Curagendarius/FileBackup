#!/bin/bash

#Проверяем что надо сделать: установка параметров или осуществить уведомление
#Если переменная WorkMission="work" то выполняем уведомление
#Если переменная WorkMission="install" то выполняем настройку параметров
#Если переменная WorkMission="deinstall" то выполняем настройку параметров
#Если переменная WorkMission неопределена то случайный запуск

if [ ! $WorkMission ]; then
	echo "Этот скрипт не предназначен для самостоятельной работы"
elif [ $WorkMission == "work" ]; then
	#Далее выполнение уведомления

elif [ $WorkMission == "install" ]; then
	#Далее настраиваем модуль нотификации
	#Все настройки дописываем в виде переменных в файл $INSTALL_DIR/config.cfg
	echo "Модуль нотификации /Пустой/ настроен"
elif [ $WorkMission == "deinstall" ]; then
	#Далее удаляем модуль нотификации - сам файл модуля удалять тут не надо
	echo "Модуль нотификации /Пустой/ подготовлен для удаления"
fi